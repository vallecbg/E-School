@model ExamInputModel
@{
    ViewData["Title"] = "Create Exam";
    var error = ViewData[GlobalConstants.ModelError];
}

<section class="banner-area" id="home">
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-center">
            <div class="col-md-6">
                <h2 class="d-flex justify-content-center text-light">@ViewData["Title"]</h2>
                <hr class="h2" />
                <form enctype="multipart/form-data" class="mx-auto" asp-controller="Exam" asp-action="CreateExam" method="post">
                    @if (error != null)
                    {
                        <p class="text-danger">@error</p>
                    }
                    <div class="form-group text-center">
                        <label asp-for="Name" class="text-center text-light"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="Description" class="text-center text-light"></label>
                        <input asp-for="Description" class="form-control" placeholder="Description..." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="StartDate" class="text-center text-light"></label>
                        <input asp-for="StartDate" class="form-control" type="datetime" placeholder="StartDate..." />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="EndDate" class="text-center text-light"></label>
                        <input asp-for="EndDate" class="form-control" type="datetime" placeholder="EndDate..." />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    @* TODO: need to remove isopen from here and make it calculate automatically *@
                    <div class="form-group text-center">
                        <label asp-for="IsOpen" class="text-center text-light"></label>
                        <input asp-for="IsOpen" class="form-control" placeholder="IsOpen..." />
                        <span asp-validation-for="IsOpen" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <label asp-for="MaxMarks" class="text-center text-light"></label>
                        <input asp-for="MaxMarks" class="form-control" type="number" placeholder="MaxMarks..." />
                        <span asp-validation-for="MaxMarks" class="text-danger"></span>
                    </div>


                    <hr class="h2" />

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-info">Create</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
